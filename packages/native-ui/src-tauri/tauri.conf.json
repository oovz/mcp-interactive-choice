{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "native-ui",
  "version": "0.1.0",
  "identifier": "mcp.oovz.interactive-choice.native-ui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Decision Needed",
        "width": 480,
        "height": 300,
        "center": true,
        "resizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "MCP Interactive Choice UI",
      "args": [
        {
          "name": "input",
          "short": "i",
          "description": "JSON string containing title, body, choices, and recommended index",
          "takesValue": true
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}